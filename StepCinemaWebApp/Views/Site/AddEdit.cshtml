@model CRFModels.Models.SiteModel
@{
    Layout = "~/Views/Shared/_AddEditLayout.cshtml";
}

<h3 class="text-center">Edit User</h3>

<div>
    <div class="col-md-4 col-md-offset-4">
        <div>
            <div class="text-primary">
                @ViewBag.Message
            </div>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.SiteId)
                    @Html.TextBoxFor(x => x.SiteId, (string.IsNullOrWhiteSpace(ViewBag.MySiteId)? 
                        (object)new { @class = "form-control" } : (object)new { @class = "form-control", @readonly = "readonly" }))
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.SiteId)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.SiteName)
                    @Html.TextBoxFor(x => x.SiteName, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.SiteName)
                    </div>
                </div>

                <div class="text-right">
                    <a href="@Url.Action("List")" class="btn btn-default">Cancel</a>
                    <button class="btn btn-primary" type="submit">@("Save")</button>
                </div>
                <div class="clearfix"></div>
            }
        </div>

    </div>
</div>