@model CRFModels.Models.ChangeMyPasswordModel
@{
    Layout = "~/Views/Shared/_SessionLayout.cshtml";
}

<h3 class="text-center">Change your password</h3>

<div>
    <div class="col-md-4 col-md-offset-4">
        <div>
            <div class="text-primary">
                @ViewBag.Message
            </div>
            @using (Html.BeginForm("ChangeMyPassword", "Home"))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.OldPassword)
                    @Html.PasswordFor(x => x.OldPassword, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.OldPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.NewPassword)
                    @Html.PasswordFor(x => x.NewPassword, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.NewPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.NewPasswordAgain)
                    @Html.PasswordFor(x => x.NewPasswordAgain, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.NewPasswordAgain)
                    </div>
                </div>

                <div class="text-right">
                    <button class="btn btn-primary" type="submit">Change Password</button>
                </div>
                <div class="clearfix"></div>
            }
        </div>

    </div>
</div>