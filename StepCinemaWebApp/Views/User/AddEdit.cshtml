@model CRFModels.Models.UserEditModel
@{
    Layout = "~/Views/Shared/_AddEditLayout.cshtml";
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $(".divBackColor").css("height", screen.height+20);
    });
</script>
<div class="table-bordered titleHeader" style="margin-top:50px;">
    <div>
        <h3>@((Model.UserId > 0) ? "Edit User" : "Add User")</h3>
    </div>
</div>
<div class="divBackColor">
    <div class="col-md-4 col-md-offset-4 table-bordered" style="background-color:white">
        <div>
            <div class="form-group">
                <h3 class="subTitle">Enter User Details</h3>
            </div>
            <div class="text-primary">
                @ViewBag.Message
            </div>
            @using (Html.BeginForm())
            {
                @Html.HiddenFor(x => x.UserId);
                <div class="form-group">
                    @Html.LabelFor(x => x.Email)
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.FirstName)
                    @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.FirstName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.LastName)
                    @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.LastName)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Password)
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.ReenterPassword)
                    @Html.PasswordFor(x => x.ReenterPassword, new { @class = "form-control" })
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.ReenterPassword)
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(x => x.Active)
                    @Html.CheckBoxFor(x => x.Active)
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.Active)
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(x => x.Roles)
                    <div>
                        @foreach (CRFModels.Models.ListPair p in Model.AvailableRoles)
                        {
                            <div>
                                <label>
                                    <input type="checkbox" @(Model.Roles.Any(x => x == p.Value) ? "checked=\"checked\"" : "") name="roles" value="@(p.Value)" />
                                    <span>@p.Name</span>
                                </label>
                            </div>
                        }
                    </div>
                    <div class="text-danger text-right small">
                        @Html.ValidationMessageFor(x => x.Active)
                    </div>
                </div>

                <div class="text-right">
                    <a href="@Url.Action("List")" class="btn btn-default">Cancel</a>
                    <button class="btn btn-primary" type="submit">@((Model.UserId > 0) ? "Save" : "Save")</button>
                </div>
            }
        </div>
        <div class="form-group"></div>
    </div>
</div>