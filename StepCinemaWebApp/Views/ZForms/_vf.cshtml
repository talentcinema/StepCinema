<script type="text/html" id="templateforpage" data-tag="sub" data-vaid-values="sub,scr,reg,none">
    <!--
    vf1	timepoint	Time point (in hours)		1	vf	-100	static
    vf1	sheduledtime	Scheduled time(in hours)		1	vf	-100	time
    vf1	subjectposition	subject's position		1	vf	-100	text
    vf1	subjectidverified	Subject ID verified		1	vf	-100	multiple
    vf1	bloodpressure	Blood pressure		1	vf	-100	static
    vf1	systolic	Systolic		1	vf	-100	text
    vf1	diastolic	Diastolic		1	vf	-100	text
    vf1	unit	Unit		1	vf	-100	static
    vf1	pulse	Pulse		1	vf	-100	text
    vf1	unit	Unit		1	vf	-100	static
    vf1	oraltemperature	Oral temperature		1	vf	-100	text
    vf1	unit	Unit		1	vf	-100	static
    vf1	timeanddate	Time and Date of vitals recorded		1	vf	-100	datetime
    vf1	doneby	done by(sign and date)		1	vf	-100	text
    vf2	additionalpoints	Additional vital time points, if required		1	vf	-100	static
    vf2	codes	*Codes: A – Seated, B – Semi – reclined, C – Supine, D – Others (specify)		1	vf	-100	static
    vf3	comments	Comments if any		1	vf	-100	text
    vf3	commentsmarked	Mark the box, if additional comments are made		1	vf	-100	multiple
    vf3	reviewedby	Reviewed by		1	vf	-100	text
    vf3	reviewedbyrole	Reviewed by role		1	vf	-100	list-radio
    -->
    {{#page.formGroup}}
    {{#vf1}}
    <div>
        <div>
            <h4 class="ac-sub-h4">{{name}}</h4>
        </div>
    </div>
    <div style="float:left;padding-right:40px;">
        <table class="ac-table">
            <thead>
                <tr>
                    <th rowspan="2">
                        {{~/text('timepoint', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('sheduledtime', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('subjectposition', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('subjectidverified', 'vf1')}}
                    </th>
                    <th colspan="2">
                        {{~/text('bloodpressure', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('unit1', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('pulse', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('unit2', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('oraltemperature', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('unit3', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('timeanddate', 'vf1')}}
                    </th>
                    <th rowspan="2">
                        {{~/text('doneby', 'vf1')}}
                    </th>
                </tr>
                <tr>
                    <th>{{~/text('systolic', 'vf1')}}</th>
                    <th>{{~/text('diastolic', 'vf1')}}</th>
                </tr>
            </thead>
            <tbody>
                {{#each ~/items('vf1'):i}}
                <tr>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('timepoint', i, 'vf1')}}" />
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('sheduledtime', i, 'vf1')}}" />
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('subjectposition', i, 'vf1')}}" />
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('subjectidverified', i, 'vf1')}}" />
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('systolic', i, 'vf1')}}" />
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('diastolic', i, 'vf1')}}" />
                    </td>
                    <td>
                        {{~/field('diastolic', i, 'vf1').unit}}
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('pulse', i, 'vf1')}}" />
                    </td>
                    <td>
                        {{~/field('pulse', i, 'vf1').unit}}
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('oraltemperature', i, 'vf1')}}" />
                    </td>
                    <td>
                        {{~/field('oraltemperature', i, 'vf1').unit}}
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('timeanddate', i, 'vf1')}}" />
                    </td>
                    <td>
                        <acinput lovs="{{~/page.lovs}}" field="{{~/field('doneby', i, 'vf1')}}" />
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
    <div style="clear:both;"></div>
    {{/vf1}}
    {{#vf2}}
    <div>
        {{~/text('codes', 'vf2')}}
    </div>
    {{/vf2}}
    {{#vf3}}
    <div>
        <br />
        <br />
    </div>
    <div>
        <div>
            <div>
                {{~/text('comments', 'vf3')}}
                <div class="ac-fullcontent">
                    <acinput lovs="{{~/page.lovs}}" field="{{~/field('comments', 0, 'vf3')}}" />
                </div>
                <div class="text-right">
                    <acinput lovs="{{~/page.lovs}}" field="{{~/field('commentsmarked', 0, 'vf3')}}" />
                </div>
                <div>
                    {{~/text('reviewedby', 'vf3')}} : <acinput lovs="{{~/page.lovs}}" field="{{~/field('reviewedby', 0, 'vf3')}}" />
                    &nbsp; &nbsp; &nbsp;
                    <acinput lovs="{{~/page.lovs}}" field="{{~/field('reviewedbyrole', 0, 'vf3')}}" />
                </div>
            </div>
        </div>
    </div>
    {{/vf3}}
    {{/page.formGroup}}
</script>

